list2 = [1, 5, 7, 9, 3]
list1 = ["abc", 34, True, 40, "male"]
list2.append(4)             //add an item to the end of the list
list1.insert(1, "orange")   //insert a list item at a specified index
list1.extend(list2)         //append elements from another list to the current list

list1.remove("male")        //Remove "male" 
list1.pop(1)                //Removes the specified index 
list1.pop()                 //Remove last index value
list1.clear()               //clear list and make it empty
list1.short()               //array short in asc
list1.short(key=str.lower)  //convert array value as string lower case before shorting in asc
list1.reverse()             //array short in desc

list1.len()                 //get length of list

del list1[0]                //Removes the specified index
del list1                   //Delete the entire list 
list3 ={10,10,12}           //set is use to remove duplicate value from array and make one value like  {10,12}
