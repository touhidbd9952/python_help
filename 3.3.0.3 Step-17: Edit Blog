{% block block_body %}

{% if blog.author == user %}
<form method="POST">
{{form | crispy }}
{% csrf_token %}
<button type="submit" class="btn btn-primary btn-sm">Update<button>
{%else%}
<p>You are not allowed to view this page, 404</p>
</form>
{% endif %}

{% endblock %}
